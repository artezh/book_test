{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="h2">{{ title }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered first">
            <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Автор</th>
                <th>Цена</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author.name }}</td>
                    <td>{{ (book.price/100)|number_format(2, '.', '') }}</td>
                    <td>
                        <a href="{{ path('book_edit', {id: book.id })}}">
                            {{"Edit"|trans}}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('book_del', {id: book.id })}}">
                            {{"Delete"|trans}}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
            <div class="text-right m-3">
                <a href="{{ path('book_add')}}" class="btn btn-primary">
                    {{"Create"|trans}}
                </a>
            </div>
    </div>
{% endblock body %}